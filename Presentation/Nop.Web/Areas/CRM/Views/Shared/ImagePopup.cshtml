
<div id="myImgModal" class="my-img-modal">

    <!-- The Close Button -->
    <span class="my-image-close">&times;</span>

    <!-- Modal Content (The Image) -->
    <img class="my-img-modal-content" id="myimg01">

    <!-- Modal Caption (Image Text) -->
    <div id="myImgcaption"></div>
</div>
<style>
    .my-show-img {
        border-radius: 5px;
        cursor: pointer;
        transition: 0.3s;
    }

    /* The Modal (background) */
    .my-img-modal {
        display: none; /* Hidden by default */
        position: fixed; /* Stay in place */
        z-index: 999; /* Sit on top */
        padding-top: 100px; /* Location of the box */
        left: 0;
        top: 0;
        width: 100%; /* Full width */
        height: 100%; /* Full height */
        overflow: auto; /* Enable scroll if needed */
        background-color: rgb(0,0,0); /* Fallback color */
        background-color: rgba(0,0,0,0.9); /* Black w/ opacity */
    }

    /* Modal Content (Image) */
    .my-img-modal-content {
        margin: auto;
        display: block;
        width: 80%;
        max-width: 700px;
    }

    /* Caption of Modal Image (Image Text) - Same Width as the Image */
    #myImgcaption {
        margin: auto;
        display: block;
        width: 80%;
        max-width: 700px;
        text-align: center;
        color: #ccc;
        padding: 10px 0;
        height: 150px;
    }

    /* Add Animation - Zoom in the Modal */
    .my-img-modal-content, #myImgcaption {
        animation-name: zoom;
        animation-duration: 0.6s;
    }

    @@keyframes zoom {
        from {
            transform: scale(0);
        }

        to {
            transform: scale(1);
        }
    }

    /* The Close Button */
    .my-image-close {
        position: absolute;
        top: 15px;
        right: 35px;
        color: #f1f1f1;
        font-size: 40px;
        font-weight: bold;
        transition: 0.3s;
    }

        .my-image-close:hover,
        .my-image-close:focus {
            color: #bbb;
            text-decoration: none;
            cursor: pointer;
        }

    /* 100% Image Width on Smaller Screens */
    @@media only screen and (max-width: 700px) {
        .my-image-modal-content {
            width: 100%;
        }
    }
</style>
<script>
    // Get the <span> element that closes the modal
    var myimagespanclose = document.getElementsByClassName("my-image-close")[0];

    // When the user clicks on <span> (x), close the modal
    myimagespanclose.onclick = function () {
        document.getElementById('myImgModal').style.display = "none";
    }
    $(document).ready(function () {
        $(".my-show-img").each(function () {
            $(this).click(function () {
                document.getElementById('myImgModal').style.display = "block";
                document.getElementById('myimg01').src = this.src;
                document.getElementById('myImgcaption').innerHTML = this.alt;
            });
        });
    });



</script>