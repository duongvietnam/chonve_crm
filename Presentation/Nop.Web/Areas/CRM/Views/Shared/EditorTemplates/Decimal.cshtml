@model Decimal
<input asp-for="@Model" asp-format="{0:F2}" type="text" />
@{
    var postfix = "";
    if (ViewData.ContainsKey("postfix") && ViewData["postfix"] != null)
    {
        postfix = ViewData["postfix"].ToString();
    }
}
<script>
    $(document).ready(function() {
        $("#@Html.IdForModel()").TouchSpin({
            min: @Html.Raw(decimal.MinValue),
            max: @Html.Raw(decimal.MaxValue),
            decimals: 2, //always display 4 digits
            forcestepdivisibility: "none",
            verticalbuttons: true,
            verticalup: '<i class="la la-angle-up"></i>',
            verticaldown: '<i class="la la-angle-down"></i>',
            buttondown_class: "btn btn-secondary",
            buttonup_class: "btn btn-secondary",
            postfix: "@postfix"
        });
    });
</script>
