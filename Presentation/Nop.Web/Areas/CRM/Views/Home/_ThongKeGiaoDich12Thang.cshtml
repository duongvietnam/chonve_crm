        <script>
                $(document).ready(function () {

                    const primary = '#6993FF';
                    const success = '#1BC5BD';
                    const info = '#8950FC';
                    const warning = '#FFA800';
                    const danger = '#F64E60';
                    function SortBySoLuong(a, b) {
                        var aSL = a.SoLuong;
                        var bSL = b.SoLuong;
                        return ((aSL > bSL) ? -1 : ((aSL < bSL) ? 1 : 0));
                    }
                    var _12Thang = function (labels, values, total) {
                        const apexChart = "#chart_12Thang";

                    var options = {
                        series: values,
                        chart: {
                            width: 380,
                            type: 'donut',
                        },
                        legend: {
                            position: 'right',
                            fontSize: '9px',
                        },
                        labels: labels,
                        plotOptions: {
                            pie: {
                                donut: {
                                    size: '65%',
                                    background: 'transparent',
                                    labels: {
                                        show: true,
                                        name: {
                                            show: true,
                                            fontSize: '18px',
                                            fontFamily: 'Helvetica, Arial, sans-serif',
                                            fontWeight: 600,
                                            color: undefined,
                                            offsetY: -10,
                                            formatter: function (val) {
                                                return val
                                            }
                                        },
                                        value: {
                                            show: true,
                                            fontSize: '13px',
                                            fontFamily: 'Helvetica, Arial, sans-serif',
                                            fontWeight: 400,
                                            color: undefined,
                                            offsetY: 16,
                                            formatter: function (val) {
                                                return val + ' Triệu VNĐ'
                                            }
                                        },
                                        total: {
                                            show: true,
                                            showAlways: false,
                                            label: 'Tổng',
                                            fontSize: '18px',
                                            fontFamily: 'Helvetica, Arial, sans-serif',
                                            fontWeight: 600,
                                            color: '#373d3f',
                                            formatter: function (w) {
                                                return w.globals.seriesTotals.reduce((a, b) => {
                                                    return total/1000/*a + b*/ + ' Tỷ VNĐ'
                                                }, 0)
                                            }
                                        }
                                    }
                                }
                            }
                        },
                responsive: [{
                    breakpoint: 480,
                    options: {
                        chart: {
                            width: 200
                        },
                        legend: {
                            position: 'top'
                        }
                    }
                }],
                        colors: [primary, success, warning, danger, info, '#69ff90', '#20339e', '#ff00c8', '#ecf64e', '#7688a9']
            };

            var chart = new ApexCharts(document.querySelector(apexChart), options);
            chart.render();
        }
                     $.get("@Url.Action("GetDVChart", "GdGiaoDich")", { year: 0, month: 0, day: 0 }, function (data) {
