                    function SortBySoLuong(a, b) {
                        var aSL = a.SoLuong;
                        var bSL = b.SoLuong;
                        return ((aSL > bSL) ? -1 : ((aSL < bSL) ? 1 : 0));
                    }
                    var _ChartKhPH = function (labels, values, total) {
                    const apexChart = "#chart_SLKHPH";

                    var options = {
                        series: values,
                        chart: {
                            width: 380,
                            type: 'donut',
                        },
                        legend: {
                            position: 'bottom',
                            fontSize: '15px',
                        },
                        labels: labels,
                        plotOptions: {
                            pie: {
                                donut: {
                                    size: '65%',
                                    background: 'transparent',
                                    labels: {
                                        show: true,
                                        name: {
                                            show: true,
                                            fontSize: '18px',
                                            fontFamily: 'Helvetica, Arial, sans-serif',
                                            fontWeight: 600,
                                            color: undefined,
                                            offsetY: -10,
                                            formatter: function (val) {
                                                return val
                                            }
                                        },
                                        value: {
                                            show: true,
                                            fontSize: '13px',
                                            fontFamily: 'Helvetica, Arial, sans-serif',
                                            fontWeight: 400,
                                            color: undefined,
                                            offsetY: 16,
                                            formatter: function (val) {
                                                return val + ' Khách'
                                            }
                                        },
                                        total: {
                                            show: true,
                                            showAlways: false,
                                            label: 'Tổng',
                                            fontSize: '18px',
                                            fontFamily: 'Helvetica, Arial, sans-serif',
                                            fontWeight: 600,
                                            color: '#373d3f',
                                            formatter: function (w) {
                                                return w.globals.seriesTotals.reduce((a, b) => {
                                                    return total + ' Khách'
                                                }, 0)
                                            }
                                        }
                                    }
                                }
                            }
                        },
                responsive: [{
                    breakpoint: 480,
                    options: {
                        chart: {
                            width: 200
                        },
                        legend: {
                            position: 'top'
                        }
                    }
                }],
