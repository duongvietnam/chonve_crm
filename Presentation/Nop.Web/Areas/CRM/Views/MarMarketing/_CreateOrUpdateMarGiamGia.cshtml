@model MarMarketingModel

<div class="card card-custom card-shadowless rounded-top-0">
    <div class="card-body p-0">
        <div class="row justify-content-center py-8 px-8 py-lg-15 px-lg-10">
            <div class="col-xl-12 col-xxl-10">
                <input asp-for="Id" type="hidden" />
                <div class="card">
                    <h5 class="card-header" style="font-weight: bold; padding:20px;">Thông tin marketing</h5>
                    <div class="collapse show">
                        <div class="card-body">
                            <div class="form-group row">
                                <label class="col-2 col-form-label">Tên</label>
                                <div class="col-4">
                                    <nop-editor asp-for="TEN" />
                                    <span asp-validation-for="TEN"></span>
                                </div>
                                <label class="col-2 col-form-label">Số tiền giảm</label>
                                <div class="col-4">
                                    <nop-editor asp-for="Sale" />
                                    <span asp-validation-for="Sale"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card" style="margin-top:10px;">
                    <h5 class="card-header" style="font-weight: bold; padding:20px;">Thông tin marketing</h5>
                    <div class="collapse show">
                        <div class="card-body">
                            <div class="form-group row">
                                <label class="col-2 col-form-label">Hạng khách hàng</label>
                                <div class="col-4">
                                    <nop-select asp-for="HangKhachHangId" asp-items="Model.DDLHangKhachHang" />
                                </div>
                                <label class="col-2 col-form-label">Số tiền tối thiểu</label>
                                <div class="col-4">
                                    <nop-editor asp-for="DonGia" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-2 col-form-label">Từ ngày</label>
                                <div class="col-4">
                                    <nop-editor asp-for="TuNgay" />
                                </div>
                                <label class="col-2 col-form-label">Đến ngày</label>
                                <div class="col-4">
                                    <nop-editor asp-for="DenNgay" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-2 col-form-label">Được kết hợp với sự kiện khác</label>
                                <div class="col-4">
                                    <nop-select asp-for="CO_THE_KET_HOP" asp-items="@Model.DDLDuocKetHop" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>