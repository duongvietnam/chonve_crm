@model KhKhachHangSearchModel
@{ //page title
    ViewBag.Title = T("CRM.CRM.CRM.KhKhachHang").Text;

    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("KhachHang.DanhSach");
}

<nop-antiforgery-token />
<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="subheader py-2 py-lg-4 subheader-transparent" id="kt_subheader">
        <div class="container d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <div class="d-flex align-items-center flex-wrap mr-2">
                <h5 class="text-dark font-weight-bold mt-2 mb-2 mr-5">
                    @ViewBag.Title
                </h5>

                <div class="subheader-separator subheader-separator-ver mt-2 mb-2 mr-5 bg-gray-200"></div>

                <div class="d-flex align-items-center" id="kt_subheader_search">
                    <span class="text-dark-50 font-weight-bold" id="kt_subheader_total">
                    </span>
                </div>
            </div>
            <div class="d-flex align-items-center">
                <a asp-action="Create" class="btn btn-light-primary font-weight-bold btn-sm px-4 font-size-base ml-2">
                    <i class="flaticon2-add"></i>
                    Thêm mới
                </a>
            </div>
        </div>
    </div>

    <div class="d-flex flex-column-fluid">
        @*<div class="container">
                <div class="kt-portlet__body">
                </div>
            </div>*@
        <div class="container">
            <!--begin::Card-->
            <div class="card card-custom mb-10">
                <div class="card-header flex-wrap border-0 pt-6 pb-0">
                    <div class="card-title">
                        <h3 class="card-label">
                            Tìm kiếm khách hàng
                            <span class="d-block text-muted pt-2 font-size-sm">Lọc danh sách khách hàng theo các trường</span>
                        </h3>
                    </div>
                </div>
                <div class="card-body">
                    <!--begin: Search Form-->
                    <!--begin::Search Form-->
                    <div class="mb-7">
                        <div class="row align-items-center">
                            <div class="col-lg-12 col-xl-12">
                                <div class="row align-items-center mb-5">
                                    <div class="col-md-6 my-2 my-md-0">
                                        <div class="row align-items-center">
                                            <div class="col-3">
                                                <label class="mr-3 mb-0 d-none d-md-block">Điểm phân hạng(từ):</label>
                                            </div>
                                            <div class="col-9">
                                                @Html.TextBoxFor(m => m.FloorPointSearch, new { @class = "form-control", @placeholder = "Điểm..." })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 my-2 my-md-0">
                                        <div class="row align-items-center">
                                            <div class="col-3">
                                                <label class="mr-3 mb-0 d-none d-md-block">Điểm phân hạng(đến):</label>
                                            </div>
                                            <div class="col-9">
                                                @Html.TextBoxFor(m => m.TopPointSearch, new { @class = "form-control", @placeholder = "Điểm..." })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row align-items-center mb-5">
                                    <div class="col-md-6 my-2 my-md-0">
                                        <div class="row align-items-center">
                                            <div class="col-3">
                                                <label class="mr-3 mb-0 d-none d-md-block">Loại khách hàng:</label>
                                            </div>
                                            <div class="col-9">
                                                <nop-select asp-for="TypeSearch" asp-items="@Model.TypeLabels" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 my-2 my-md-0">
                                        <div class="row align-items-center">
                                            <div class="col-3">
                                                <label class="mr-3 mb-0 d-none d-md-block">Giới tính:</label>
                                            </div>
                                            <div class="col-9">
                                                <nop-select asp-for="GenderSearch" asp-items="@Model.GenderLabels" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row align-items-center mb-5">
                                    <div class="col-md-6 my-2 my-md-0">
                                        <div class="row align-items-center">
                                            <div class="col-3">
                                                <label class="mr-3 mb-0 d-none d-md-block">Tên:</label>
                                            </div>
                                            <div class="col-9">
                                                @Html.TextBoxFor(m => m.KeySearch, new { @class = "form-control", @placeholder = "Tên..." })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 my-2 my-md-0">
                                        <div class="row align-items-center">
                                            <div class="col-3">
                                                <label class="mr-3 mb-0 d-none d-md-block">Số điện thoại:</label>
                                            </div>
                                            <div class="col-9">
                                                @Html.TextBoxFor(m => m.PhoneSearch, new { @class = "form-control", @placeholder = "Số điện thoại..." })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row align-items-center mb-5">
                                    <div class="col-md-6 my-2 my-md-0">
                                        <div class="row align-items-center">
                                            <div class="col-3">
                                                <label class="mr-3 mb-0 d-none d-md-block">Địa chỉ Email:</label>
                                            </div>
                                            <div class="col-9">
                                                @Html.TextBoxFor(m => m.EmailSearch, new { @class = "form-control", @placeholder = "Email..." })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 my-2 my-md-0">
                                        <div class="row align-items-center">
                                            <div class="col-3">
                                                <label class="mr-3 mb-0 d-none d-md-block">Số ngày chưa quay lại:</label>
                                            </div>
                                            <div class="col-9">
                                                @Html.TextBoxFor(m => m.DayTimeSearch, new { @class = "form-control", @placeholder = "Số ngày..." })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-xl-12 mt-5 mt-lg-0 text-center">
                                <button type="button" id="search-items" class="btn btn-light-primary px-6 font-weight-bold">
                                    <i class="flaticon2-search-1 text-muted"></i>Search
                                </button>
                            </div>
                        </div>
                    </div>
                    <!--end::Search Form-->
                    <!--end: Search Form-->
                    <!--begin: Datatable-->
                    <div class="datatable datatable-bordered datatable-head-custom" id="kt_datatable"></div>
                    <!--end: Datatable-->
                </div>
            </div>
            <!--end::Card-->
            <!--begin::Card-->
            <div class="card card-custom gutter-b">
                <div class="card-body">
                    <!--begin: Datatable-->
                    @await Html.PartialAsync("Table", new DataTablesModel
               {
                   Name = "items-grid",
                   UrlRead = new DataUrl("List", "KhKhachHang", null),
                   SearchButtonId = "search-items",
                   Length = Model.PageSize,
                   LengthMenu = Model.AvailablePageSizes,
                   Filters = new List<FilterParameter>
                              {
                                  new FilterParameter(nameof(Model.KeySearch)),
                                  new FilterParameter(nameof(Model.PhoneSearch)),
                                  new FilterParameter(nameof(Model.EmailSearch)),
                                  new FilterParameter(nameof(Model.GenderSearch)),
                                  new FilterParameter(nameof(Model.TopPointSearch)),
                                  new FilterParameter(nameof(Model.FloorPointSearch)),
                                  new FilterParameter(nameof(Model.TypeSearch)),
                                  new FilterParameter(nameof(Model.DayTimeSearch)),
                              },
                   ColumnCollection = new List<ColumnProperty>
                              {
        new ColumnProperty(nameof(KhKhachHangModel.TEN))
        {
        Title = "Khách hàng",
        Render= new RenderCustom("RenderTen"),
        Width = "25%",
        ClassName="font-weight-bolder text-capitalize"
         },
        new ColumnProperty("")
        {
        Title = "Liên lạc",
        Render= new RenderCustom("RenderContact"),
        Width = "25%",
        ClassName="font-weight-bolder text-capitalize"
         },
        new ColumnProperty("")
        {
        Title = "Phân hạng",
        Render= new RenderCustom("RenderGiaoDich"),
        Width = "20%",
        ClassName="font-weight-bolder text-capitalize"
         },
        new ColumnProperty(nameof(KhKhachHangModel.Id)){
            //Render = new RenderButtonCustom(NopColumnClassDefaults.Button, "Chi Tiết") { Url = "/CRM/KhKhachHang/Details/" + new DataUrl("Details").DataId }
            Title = "Thao tác",
            Render = new RenderCustom("RenderAction"),
            AutoWidth = true,
            Width = "13%",
        ClassName="font-weight-bolder text-capitalize"
               }
        }
               })
                    <!--end: Datatable-->
                    <!--end::Card-->
                </div>
            </div>
            <!--end::Card-->
        </div>
    </div>
</div>
