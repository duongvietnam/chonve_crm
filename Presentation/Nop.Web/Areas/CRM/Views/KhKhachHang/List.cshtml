    function RenderTen(data, type, row, meta) {
        var _html = "<div class='text-primary font-weight-bolder font-size-lg mb-0'>" + data + "</div>";
        _html += "<div class='text-primary font-weight-bold '>" + "<i class='text-muted text-hover-primary icon-md fas fa-birthday-cake mr-2'></i>" + row.NgaySinhString + "</div>";
        _html += "<div class='text-primary font-weight-bold'>" + "<i class='text-muted text-hover-primary icon-md fas fa-transgender-alt mr-2'></i>" + row.GIOI_TINH_TEXT + "</div>";

        return _html;
    }
    function RenderContact(data, type, row, meta) {
        var _html = "<div class='text-primary font-weight-bold'>" + "<i class='text-muted text-hover-primary  icon-md fas fa-phone-square-alt mr-2'></i>" + (row.SoDienThoai != null ? row.SoDienThoai : "") + "</div>";
        _html += "<div class='text-primary font-weight-bold'>" + "<i class='icon-1x text-muted text-hover-primary  flaticon-multimedia-2 mr-2'></i>" + (row.EMAIL != null ? row.EMAIL : "") + "</div>";
        _html += "<div class='text-primary font-weight-bold'>" + "<i class='icon-1x text-muted text-hover-primary  flaticon-facebook-letter-logo mr-2'></i>" + (row.FACEBOOK != null ? row.FACEBOOK : "") + "</div>";
        _html += "<div class='text-primary font-weight-bold'>" + "<i class='text-muted text-hover-primary icon-md fas  mr-2'>Zalo</i>" + (row.ZALO != null ? row.ZALO : "") + "</div>";

        return _html;
    }
    function RenderGiaoDich(data, type, row, meta) {
