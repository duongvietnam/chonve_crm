@model ChPhanHangKhachHangModel


<div class="card card-custom card-shadowless rounded-top-0">
    <div class="card-body p-0">
        <div class="row justify-content-center py-8 px-8 py-lg-15 px-lg-10">
            <div class="col-xl-12 col-xxl-10">
                <input asp-for="Id" type="hidden" />
                <div class="form-group row">
                    <label class="col-2 col-form-label">Tên</label>
                    <label class="col-10 col-form-label">@Model.TEN</label>
                </div>
                <div class="form-group row">
                    <label class="col-2 col-form-label">Giá trị cấp 1</label>
                    <div class="col-10">
                        <nop-editor asp-for="GIA_TRI_CAP_1" />
                        <span asp-validation-for="GIA_TRI_CAP_1"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-2 col-form-label">Giá trị cấp 2</label>
                    <div class="col-10">
                        <nop-editor asp-for="GIA_TRI_CAP_2" />
                        <span asp-validation-for="GIA_TRI_CAP_2"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-2 col-form-label">Giá trị cấp 3</label>
                    <div class="col-10">
                        <nop-editor asp-for="GIA_TRI_CAP_3" />
                        <span asp-validation-for="GIA_TRI_CAP_3"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-2 col-form-label">Tên cấp 1</label>
                    <div class="col-10">
                        <nop-editor asp-for="TEN_CAP_1" />
                        <span asp-validation-for="TEN_CAP_1"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-2 col-form-label">Tên cấp 2</label>
                    <div class="col-10">
                        <nop-editor asp-for="TEN_CAP_2" />
                        <span asp-validation-for="TEN_CAP_2"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-2 col-form-label">Tên cấp 3</label>
                    <div class="col-10">
                        <nop-editor asp-for="TEN_CAP_3" />
                        <span asp-validation-for="TEN_CAP_3"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

