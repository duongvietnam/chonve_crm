<script>
    $(document).ready(function () {
        $.get("@Url.Action("GetNumberKHByNhomKH", "KhNhomKhachHangMap")", {}, function (data) {
            //console.log(data);
            html = ``;
            listColorClass = ["bg-warning", "bg-success", "bg-danger", "bg-primary", "bg-info", "", "", ""];
            listTextColorClass = ["text-warning", "text-success", "text-danger", "text-primary", "text-info", "", "", ""];
            clindex = 0;
            for (item of data) {

                html += `<div class="d-flex align-items-center mb-10">
                            <span class="bullet bullet-bar ${listColorClass[clindex]} align-self-stretch"></span>
                            <label class="flex-shrink-0 m-0 mx-4">
                                <span><i class="icon-2x flaticon2-group ${listTextColorClass[clindex]}"></i></span>
                            </label>
                            <div class="d-flex flex-column flex-grow-1">
                                <a href="#" class="text-dark-75 text-hover-primary font-weight-bold font-size-lg mb-1">${item.Nhan}</a>
                                <span class="text-success font-weight-bold">${item.SoLuong}<span class="text-muted font-weight-bold"> Khách hàng</span></span>
                                <span class="text-success font-weight-bold">${Math.round((item.GiaTri / 1000000000) * Math.pow(10, 2)) / Math.pow(10, 2)}<span class="text-muted font-weight-bold"> Tỷ VNĐ</span></span>
                            </div>
                        </div>`;
                clindex++;
            }
            $("#listNhomKH").append(html);
        });
    });
</script>