@model MarEventMarketingModel


<div class="card card-custom card-shadowless rounded-top-0">
    <div class="card-body p-0">
        <div class="row justify-content-center py-8 px-8 py-lg-15 px-lg-10">
            <div class="col-xl-12 col-xxl-10">
                <input asp-for="Id" type="hidden" />
                <div class="form-group row">
                    <label class="col-2 col-form-label">Tên</label>
                    <div class="col-10">
                        <nop-editor asp-for="TEN" />
                        <span asp-validation-for="TEN"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-2 col-form-label">Marketing</label>
                    <div class="col-10">
                        <nop-select asp-for="MARKETING_ID" asp-items="Model.DDLMarketing" />
                        <span asp-validation-for="MARKETING_ID"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-2 col-form-label">Bắt đầu</label>
                    <div class="col-4">
                        <nop-editor asp-for="THOI_GIAN_BAT_DAU" />
                        <span asp-validation-for="THOI_GIAN_BAT_DAU"></span>
                    </div>
                    <label class="col-2 col-form-label">Kết thúc</label>
                    <div class="col-4">
                        <nop-editor asp-for="THOI_GIAN_KET_THUC" />
                        <span asp-validation-for="THOI_GIAN_KET_THUC"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

