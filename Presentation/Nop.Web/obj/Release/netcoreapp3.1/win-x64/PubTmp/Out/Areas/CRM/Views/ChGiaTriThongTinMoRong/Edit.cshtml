@model ChGiaTriThongTinMoRongModel
@{
    //page title
    ViewBag.Title =T("CRM.CRM.CRM.ChGiaTriThongTinMoRong").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("CRM.CRM.ChGiaTriThongTinMoRong");
}
<div class="d-flex flex-column-fluid">
    <div class="container">
        <form asp-controller="ChGiaTriThongTinMoRong" asp-action="Edit" method="post">
            <div class="content d-flex flex-column flex-column-fluid" id="kt_content">
                <div class="subheader py-2 py-lg-4 subheader-transparent" id="kt_subheader">
                    <div class="container d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
                        <div class="d-flex align-items-center flex-wrap mr-2">
                            <h5 class="text-dark font-weight-bold mt-2 mb-2 mr-5">
                                Thêm mới @ViewBag.Title
                            </h5>
                            <div class="subheader-separator subheader-separator-ver mt-2 mb-2 mr-5 bg-gray-200"></div>
                            <div class="d-flex align-items-center" id="kt_subheader_search">
                                <span class="text-dark-50 font-weight-bold" id="kt_subheader_total">Sửa thông tin chi tiết và nhấn lưu</span>
                            </div>
                        </div>

                        <div class="d-flex align-items-center">
                            <a asp-action="List" class="btn btn-default font-weight-bold btn-sm px-3 font-size-base">
                                <i class="la la-long-arrow-left"></i>
                                Trở lại danh sách
                            </a>
                            <button type="submit" name="save" class="btn btn-success btn-bold">
                                <i class="flaticon2-hourglass-1"></i>
                                Lưu
                            </button>
                            <button type="submit" name="save-continue" class="btn btn-brand btn-bold">
                                <i class="flaticon2-writing"></i>
                                Lưu và tiếp tục sửa
                            </button>
                            <span id="item-delete" class="btn btn-danger">
                                <i class="flaticon2-delete"></i>
                                Xóa
                            </span>
                        </div>
                    </div>
                </div>

                @await Html.PartialAsync("_CreateOrUpdate", Model)
                
            </div>
        </form>
        <nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="item-delete" />
    </div>
</div>

