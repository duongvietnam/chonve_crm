<script>
    $(document).ready(function () {
        $.get("@Url.Action("GetTopNewGiaoDichs", "GdGiaoDich")", {}, function (data) {
            //console.log(data);
            html = ``;
            listColorClass = ["text-warning", "text-success", "text-danger", "text-primary", "text-info", "", "", ""]
            clindex = 0;
            for (item of data) {

                html += `<div class="timeline-item align-items-start">
                <div class="timeline-label font-weight-bolder text-dark-75 font-size-lg">${item.DateTime}</div>
                <div class="timeline-badge">
                    <i class="fa fa-genderless ${listColorClass[clindex]} icon-xl"></i>
                </div>
                <div class="timeline-content font-weight-bold font-size-lg text-dark-75 pl-3">
                    Khách hàng <a target="_blank" href="KhKhachHang/Details/${item.IdKH}" class="text-primary text-capitalize font-weight-bolder">${item.NameKH}</a> giao dịch <a target="_blank" href="KhKhachHang/TradeDetail/${item.IdKH}" class="text-primary font-weight-bolder">${item.TotalAmount}₫</a>.
                </div>
            </div>`;
                clindex++;
            }
            $("#timeLineGD").append(html);
        });
    });
</script>