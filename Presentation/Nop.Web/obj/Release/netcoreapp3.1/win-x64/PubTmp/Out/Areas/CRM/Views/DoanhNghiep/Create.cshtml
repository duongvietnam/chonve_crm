@model StoreModel
@{
    //page title
    ViewBag.Title =T("CRM.CRM.CRM.DoanhNghiep").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("CRM.CRM.DoanhNghiep");
}
<div class="d-flex flex-column-fluid">
    <div class="container">
        <form asp-controller="DoanhNghiep" asp-action="Create" method="post">
            <div class="content d-flex flex-column flex-column-fluid" id="kt_content">
                <div class="subheader py-2 py-lg-4 subheader-transparent" id="kt_subheader">
                    <div class="container d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
                        <div class="d-flex align-items-center flex-wrap mr-2">
                            <h5 class="text-dark font-weight-bold mt-2 mb-2 mr-5">
                                Thêm mới @ViewBag.Title
                            </h5>
                            <div class="subheader-separator subheader-separator-ver mt-2 mb-2 mr-5 bg-gray-200"></div>
                            <div class="d-flex align-items-center" id="kt_subheader_search">
                                <span class="text-dark-50 font-weight-bold" id="kt_subheader_total">Nhập thông tin chi tiết và nhấn lưu</span>
                            </div>
                        </div>

                        <div class="d-flex align-items-center">
                            <a asp-action="List" class="btn btn-secondary font-weight-bold btn-sm px-3 font-size-base mr-2">
                                <i class="la la-long-arrow-left"></i>
                                Trở lại danh sách
                            </a>
                            <button type="submit" name="save" class="btn btn-success btn-bold mr-2">
                                <i class="flaticon2-hourglass-1"></i>
                                Lưu
                            </button>
                            @*<button type="submit" name="save-continue" class="btn btn-primary btn-bold mr-2">
                                <i class="flaticon2-writing"></i>
                                Lưu và tiếp tục sửa
                            </button>*@
                        </div>
                    </div>
                </div>

                @*@await Html.PartialAsync("_DoanhNghiepBasicForm", Model)*@
                <div class="card card-custom gutter-bs">
                    <!--Begin::Body-->
                    <div class="card-body px-0">
                        <div class="row">
                            <div class="col-xl-1"></div>
                            <div class="col-xl-9 my-2">
                                <div id="dnBasicForm">
                                    <div class="form-group row">
                                        <label class="col-form-label col-3 text-lg-right text-left text-required">Tên hiện thị:</label>
                                        <div class="col-9">
                                            <nop-editor asp-for="Name" />
                                            <span asp-validation-for="Name"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-form-label col-3 text-lg-right text-left text-required">Tên doanh nghiệp:</label>
                                        <div class="col-9">
                                            <nop-editor asp-for="CompanyName" />
                                            <span asp-validation-for="CompanyName"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-form-label col-3 text-lg-right text-left text-required">Tên đầy đủ:</label>
                                        <div class="col-9">
                                            <nop-editor asp-for="CompanyFullName" />
                                            <span asp-validation-for="CompanyFullName"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-form-label col-3 text-lg-right text-left text-required">Số điện thoại:</label>
                                        <div class="col-9">
                                            <nop-editor asp-for="CompanyPhoneNumber" />
                                            <span asp-validation-for="CompanyPhoneNumber"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-form-label col-3 text-lg-right text-left text-required">Địa chỉ:</label>
                                        <div class="col-9">
                                            <nop-editor asp-for="CompanyAddress" />
                                            <span asp-validation-for="CompanyAddress"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-form-label col-3 text-lg-right text-left text-required">Tên miền Domain đăng nhập:</label>
                                        <div class="col-9">
                                            <nop-editor asp-for="DomainLogin" />
                                            <span asp-validation-for="DomainLogin"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-form-label col-3 text-lg-right text-left text-required">Địa chỉ URL :</label>
                                        <div class="col-9">
                                            <nop-editor asp-for="Url" />
                                            <span asp-validation-for="Url"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>

