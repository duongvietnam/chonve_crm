@model DateTime
@using System.Globalization
<input id="@Html.IdForModel()" class="form-control" autocomplete="off"  name="@Html.NameForModel()" value="@((Model > DateTime.MinValue ? Model : DateTime.Today).ToString(CultureInfo.CurrentCulture.DateTimeFormat))" />
<script>
    $(document).ready(function () {
        $("#@Html.IdForModel()").datepicker({
            language: "vi",
            todayHighlight: !0,
            autoclose: true,
});
    });
</script>