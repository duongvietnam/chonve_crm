<script>
    function LoadFormContent(ctl) {
        $(".menu-profile").removeClass("active");
        var viewname = $(ctl).data("viewname");
        $(ctl).addClass("active");
        document.body.scrollTop = 0; // For Safari
        document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
        ShowViewLoading("#tabProfileContent");
        $.ajax({
            cache: false,
            type: "GET",
            url: "/CRM/Profile/" + viewname,
            success: function (data) {
                $("#tabProfileContent").html(data);
            },
            error: function (jqXHR, textStatus, errorThrown) {
                ShowError(errorThrown);
            }
        });
    }
    $(document).ready(function () {
        $(".menu-profile").click(function () {
            LoadFormContent(this);
        });
    })
</script>