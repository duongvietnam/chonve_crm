                    {
                        <text>
                            @await Html.PartialAsync("_Info", Model.customerModel)
                        </text>
                    }


                </div>
                <!--end::Content-->
                @if (!string.IsNullOrEmpty(Model.TabNameFocus))
                {
                    <text>
                        <script>
                            $(document).ready(function () {
                                LoadFormContent("#tab@(Model.TabNameFocus)");
                            })
                        </script>
                    </text>
