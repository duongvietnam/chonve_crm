@using Nop.Core
@model CustomerModel
@{

   
}
<div class="card card-custom">
    <!--begin::Header-->
    <div class="card-header py-3">
        <div class="card-title align-items-start flex-column">
            <h3 class="card-label font-weight-bolder text-dark">Thông tin chung</h3>
        </div>
        <div class="card-toolbar">

        </div>
    </div>
    <!--end::Header-->
    <!--begin::Body-->
    <div class="card-body">
        <div class="form-group row">
            <label class="col-md-4 col-form-label">Họ và tên:</label>
            <div class="col-md-8 form-control-plaintext font-weight-bolder">
                @Model.FirstName @Model.LastName
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-4 col-form-label">Số điện thoại:</label>
            <div class="col-md-8 form-control-plaintext font-weight-bolder">
                @Model.Phone
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-4 col-form-label">Email:</label>
            <div class="col-md-8 form-control-plaintext font-weight-bolder">
                @Model.Email
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-4 col-form-label">Địa chỉ IP truy xuất:</label>
            <div class="col-md-8 form-control-plaintext font-weight-bolder">
                @Model.LastIpAddress
            </div>
        </div>

        <div class="form-group row">
            <label class="col-md-4 col-form-label">Ngày xử lý cuối:</label>
            <div class="col-md-8 form-control-plaintext font-weight-bolder">
                @Model.LastActivityDate.toDateVNString(true)
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-4 col-form-label">Trang truy xuất cuối:</label>
            <div class="col-md-8 form-control-plaintext font-weight-bolder">
                @Model.LastVisitedPage
            </div>
        </div>
    </div>
    <!--end::Body-->
</div>