<div class="card card-custom gutter-b card-stretch">
    <!--begin::Header-->
    <div class="card-header border-0 pt-5">
        <div class="card-title font-weight-bolder">
            <div class="card-label">
                <span class="font-weight-bolder text-dark">
                    Báo cáo doanh thu hiện tại (tuần trước - tuần này)
                </span>
                <span class="text-muted mt-3 font-weight-bold font-size-sm"></span>
                <div class="font-size-sm text-muted mt-2" id="DoanhThuDVtotal"></div>
            </div>
        </div>
        <div class="card-toolbar d-none">
        </div>
    </div>
    <!--end::Header-->
    <!--begin::Body-->
    <div class="card-body p-0 d-flex flex-column">
        <!--begin::Chart-->
        <div id="baocaotuan" style="min-height: 365px;"></div>

        <script>
            $(document).ready(function () {

                // Shared Colors Definition
                const primary = '#6993FF';
                const success = '#1BC5BD';
                const info = '#8950FC';
                const warning = '#FFA800';
                const danger = '#F64E60';

                var _baocaoNgayTuanChart = function (series,categories ) {
                    const apexChart = "#baocaotuan";
                    var options = {
                        colors: [primary, warning],
                        series: series,
                        chart: {
                            height: 350,
                            type: 'line',
                            stacked: true,
                            toolbar: {
                                show: false
                                },
                        },
                        dataLabels: {
                            enabled: true
                        },
                        stroke: {
                            width: [1, 4]
                        },
                        title: {
                            text: 'Báo cáo cùng kỳ ngày',
                            align: 'left',
                            offsetX: 110
                        },
                        xaxis: {
                            categories: categories ,
                        },
                        yaxis: [
                            {
                                axisTicks: {
                                    show: true,
                                },
                                axisBorder: {
                                    show: true,
                                    color: primary
                                },
                                labels: {
                                    style: {
                                        colors: primary,
                                    }
                                },
                                title: {
                                    text: "Doanh Thu",
                                    style: {
                                        color: primary,
                                    }
                                },
                                tooltip: {
                                    enabled: true
                                }
                            },
                            {
                                seriesName: 'Tăng Trưởng',
                                opposite: true,
                                axisTicks: {
                                    show: true,
                                },
                                axisBorder: {
                                    show: true,
                                    color: warning
                                },
                                labels: {
                                    style: {
                                        colors: warning,
                                    },
                                },
                                title: {
                                    text: "Tăng Trưởng",
                                    style: {
                                        color: warning,
                                    }
                                }
                            }
                        ],
                        tooltip: {
                            fixed: {
                                enabled: true,
                                position: 'right', // topRight, topLeft, bottomRight, bottomLeft
                                offsetY: 30,
                                offsetX: 60
                            },
                            y: [
                                {
                                formatter: function (val) {
                                    return val + " Triệu VNĐ"
                                    }
                                },
                                {
                                    formatter: function (val) {
                                        return val + " %"
                                    }
                                }
                            ]

                        },
                        legend: {
                            horizontalAlign: 'left',
                            offsetX: 40
                        }
                    };

                    var chart = new ApexCharts(document.querySelector(apexChart), options);
                    chart.render();
                }
                var pushCate = function (startNumCate, endNumCate, prefix = "",suffix = "") {
                        categories = [];
                        for (var i = startNumCate; i <= endNumCate; i++) {
                            categories.push(prefix + i.toString() + suffix);
                        }
                        return categories;
                }
                var get_chart = function (nam , thang, ngay,tuan) {
                    $.get("@Url.Action("GetBaoCaoDoanhThuCungKyChart", "GdGiaoDich")", { year: nam, month: thang, day: ngay, week: tuan}, function (data) {
                         series = [];
                            categories = [];
                        maxlength = 2;
                        var newSeries = {
                                 name: 'Doanh Thu',
                                type: 'column',
                                data: []
                             };
                        for (var i = 0; i < maxlength /*arr[arr.length - 1].Time*/; i++) {
                                 newSeries.data.push(0);
                        }
                        var index = 0;
                        for (var gd of data) {
                            newSeries.data[index] = Math.round((gd.GiaTri / 1000000) * Math.pow(10, 2)) / Math.pow(10, 2);
                            index++;
                        }
                        series.push(newSeries);
                        series.push({
                            type: 'line',
                            name: "Tăng trưởng",
                            data: [0, 100*(Math.round(((newSeries.data[1] - newSeries.data[0])/ newSeries.data[0]) * Math.pow(10, 2)) / Math.pow(10, 2))]
                        });
                        categories = ["Tuần trước","Tuần này"];
                        _baocaoNgayTuanChart(series, categories);
                    });
                }
                var d = new Date();
                var month = d.getMonth() + 1;
                var day = d.getDate();
                var year = d.getFullYear();
                get_chart(year,month,day,1);
            });
        </script>
        <!--end::Chart-->
    </div>
    <!--end::Body-->
</div>

